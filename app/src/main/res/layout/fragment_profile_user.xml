<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue_bg"
    tools:context=".Fragments.Profile.ProfileUser">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/profileSecondaryColor"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:background="#03A9F4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/UserProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="252dp"
            android:text="Username"
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/profileSecondaryColor" />

        <TextView
            android:id="@+id/treinosTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Treinos"
            android:textColor="#FBFBFB"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toEndOf="@+id/lineImageView"
            app:layout_constraintTop_toBottomOf="@+id/CountTreinos" />

        <TextView
            android:id="@+id/CountTreinos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="XX"
            android:textColor="#FBFBFB"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/lineImageView"
            app:layout_constraintTop_toBottomOf="@+id/profileSecondaryColor" />

        <ImageView
            android:id="@+id/lineImageView"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="161dp"
            android:src="@drawable/vertical_white_separator"
            app:layout_constraintStart_toEndOf="@+id/userProfileImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/objectivesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Objetivos:"
            android:textColor="#FBFBFB"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineView" />

        <TextView
            android:id="@+id/especialidade2"
            android:layout_width="129dp"
            android:layout_height="32dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="104dp"
            android:background="@drawable/rectangle_objetivos_teste"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="Objetivo 2"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/especialidade1"
            app:layout_constraintTop_toBottomOf="@+id/lineView" />

        <TextView
            android:id="@+id/especialidade1"
            android:layout_width="129dp"
            android:layout_height="32dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/rectangle_objetivos_teste"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="Objetivo 1"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/especialidade2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/objectivesTextView" />

        <TextView
            android:id="@+id/objetivo3"
            android:layout_width="129dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_objetivos_teste"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="Objetivo 3"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/especialidade1" />

        <TextView
            android:id="@+id/objetivo4"
            android:layout_width="129dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rectangle_objetivos_teste"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="Objetivo 4"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.659"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/especialidade2" />

        <TextView
            android:id="@+id/userCREF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="email@example.com"
            android:textColor="#FBFBFB"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/UserProfileName" />

        <View
            android:id="@+id/lineView"
            android:layout_width="wrap_content"
            android:layout_height="2sp"
            android:background="@color/hint_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileUserImage"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_marginTop="104dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/roundedImageView"
            tools:src="@tools:sample/avatars" />

        <View
            android:id="@+id/userProfileImageView"
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:layout_marginTop="104dp"
            android:background="@drawable/circle_test"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/profileSecondaryColor" />

        <TextView
            android:id="@+id/AcessibilidadeUser"
            android:layout_width="148dp"
            android:layout_height="31dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rectangle_light_gradient"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:text="Acessibilidade"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toEndOf="@+id/editTextUsername"
            app:layout_constraintTop_toBottomOf="@+id/profileSecondaryColor"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/EditProfileUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toTopOf="@+id/AcessibilidadeUser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.848"
            app:layout_constraintStart_toEndOf="@+id/profileUserImage"
            app:layout_constraintTop_toBottomOf="@+id/profileSecondaryColor"
            app:layout_constraintVertical_bias="0.416" />

        <ImageView
            android:id="@+id/ExitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_logout"
            app:layout_constraintBottom_toTopOf="@+id/AcessibilidadeUser"
            app:layout_constraintEnd_toStartOf="@+id/EditProfileUser"
            app:layout_constraintHorizontal_bias="0.915"
            app:layout_constraintStart_toEndOf="@+id/userProfileImageView"
            app:layout_constraintTop_toBottomOf="@+id/profileSecondaryColor"
            app:layout_constraintVertical_bias="0.541" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>