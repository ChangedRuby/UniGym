<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Treinos.TreinosUser">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue_bg">

        <RadioGroup
            android:id="@+id/treinoToggle"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="40sp"
            android:background="@drawable/rectangle_objetivos_teste"
            android:checkedButton="@+id/treinoButtonB"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/treinoButtonA"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_background"
                android:button="@null"
                android:gravity="center"
                android:text="Treino A"
                android:textColor="@color/white" />

            <RadioButton
                android:id="@+id/treinoButtonB"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/toggle_background"
                android:backgroundTint="#4BB4A1"
                android:button="@null"
                android:gravity="center"
                android:text="Treino B"
                android:textColor="@color/white" />
        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/treinoUserRecyclerview"
            android:layout_width="406dp"
            android:layout_height="572dp"
            android:layout_marginTop="72dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/treinoToggle"
            tools:itemCount="5"
            tools:listitem="@layout/treinos_user_recycler_layout" />

        <Button
            android:id="@+id/confirmarTreinoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#4BB4A1"
            android:text="Treino Feito"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.808"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/treinoToggle" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>